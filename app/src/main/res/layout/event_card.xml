<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation">
    <androidx.cardview.widget.CardView
        android:id="@+id/event_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:id="@+id/event_image"
                android:background="@color/cardview_dark_background"
                android:layout_gravity="top" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:id="@+id/event_name"
                android:layout_below="@+id/event_image"
                android:text="Event Name"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:id="@+id/event_time"
                android:layout_below="@+id/event_name"
                android:text="8:00 PM"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:id="@+id/time_date_dash"
                android:layout_below="@+id/event_name"
                android:layout_toEndOf="@+id/event_time"
                android:text=" - "
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:id="@+id/event_date"
                android:layout_below="@+id/event_name"
                android:layout_toEndOf="@+id/time_date_dash"
                android:text="Feb 14, 2024"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:id="@+id/event_location"
                android:layout_below="@+id/event_time"
                android:text="Edmonton, AB"
                android:textSize="20sp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>