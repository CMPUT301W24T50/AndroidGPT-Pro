<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow_icon"
        android:id="@+id/back_button"
        android:layout_margin="16dp">

    </ImageButton>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_event_image"
        android:layout_width="260dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/iv_event_image"
                android:layout_width="260dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:color="@color/white"
                android:scaleType="centerCrop">

            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Event Title"
        android:textSize="34sp"
        android:layout_below="@+id/card_event_image"/>

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:layout_marginTop="10dp"
        android:text="Event Date"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/event_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address (Street)"
        android:textSize="18sp"
        android:layout_below="@id/event_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/event_location_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address (City)"
        android:textSize="18sp"
        android:layout_below="@id/event_address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/event_location_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address (Province)"
        android:textSize="18sp"
        android:layout_below="@id/event_location_city"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"/>


    <TextView
        android:id="@+id/event_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Detail"
        android:textSize="18sp"
        android:layout_below="@id/event_location_province"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_description_title"
        android:layout_marginTop="5dp"
        android:text="Event Detail"
        android:textColor="#BFA3A3"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:layout_below="@id/event_description"
        android:text="Sign Up" />

    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:layout_below="@id/event_description"
        android:text="Withdraw"
        />

    <Button
        android:id="@+id/btn_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:layout_below="@id/event_description"
        android:text="Check In"
        />



</RelativeLayout>