<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:text="Events"
        android:layout_marginTop="36dp"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/event_list_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/event_title"
        android:layout_marginTop="0dp"
        android:divider="#00000000"
        android:padding="16dp" />

    <TextView
        android:id="@+id/page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_list_view"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@+id/event_next_page"
        android:layout_toEndOf="@+id/event_previous_page"
        android:gravity="center"
        android:text="page" />


    <ImageButton
        android:id="@+id/event_previous_page"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_list_view"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/MainTheme2"
        android:gravity="center"
        android:src="@android:drawable/ic_media_rew"
        app:tint="@color/MainTheme1" />

    <ImageButton
        android:id="@+id/event_next_page"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_list_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/MainTheme2"
        android:gravity="center"
        android:src="@android:drawable/ic_media_ff"
        app:tint="@color/MainTheme1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_event"
        app:menu="@menu/bottom_nav"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>